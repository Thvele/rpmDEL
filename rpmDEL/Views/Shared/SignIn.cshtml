@model rpmDEL.Models.LoginModel
@{
    ViewData["Title"] = "Авторизация";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!--===============================================================================================-->
    <link rel="icon" type="image/png" href="~/images/icons/favicon.ico" />
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/vendor/bootstrap/css/bootstrap.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/fonts/font-awesome-4.7.0/css/font-awesome.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/fonts/Linearicons-Free-v1.0.0/icon-font.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/vendor/animate/animate.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/vendor/css-hamburgers/hamburgers.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/vendor/animsition/css/animsition.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/vendor/select2/select2.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/vendor/daterangepicker/daterangepicker.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/css/util.css">
    <link rel="stylesheet" type="text/css" href="~/css/main.css">
    <link rel="stylesheet" type="text/css" href="~/css/profile.css">
    <link rel="stylesheet" type="text/css" href="~/css/SignIn.css">

    <script>
        window.onload = function () {
            $("form input").each(function () {
                var elem = $(this);
                var type = elem.attr("type");
                if (type == "checkbox") elem.prop("checked", "");
                else if (type == "text" || type == "email" || type == "password") elem.val("");
            });
        }
    </script>
    <style>
        #autherror {
            color: white;
            background: #000;
            width: -webkit-fill-available;
            height: auto;
            border-style: solid;
            border-color: #000;
            text-align: center;
            font-family: OpenSans-Regular;
            border-top-left-radius: 12px;
            border-top-right-radius: 12px;
        }

    </style>
</head>

<body>
    <div class="limiter">
        <div class="container-login100">
            <div class="wrap-login100 p-b-160 p-t-50">
                <form class="login100-form validate-form" asp-action="SignIn" asp-controller="acc" asp-anti-forgery="true">
                    <span class="login100-form-title p-b-43">
                        Account Authorization
                    </span>


                    <figure id="card" style="height: auto">
                        <div id="autherror" asp-validation-summary="ModelOnly"></div>
                        <div>
                            <div class="wrap-input100 rs3 validate-input" data-validate="Не указан логин" style="width: 100%">
                                <input class="input100" type="text" asp-for="_login" autocomplete="off">
                                <span class="label-input100">Логин</span>
                            </div>


                            <div class="wrap-input100 validate-input" data-validate="Не указан пароль" style="width: 100%">
                                <input class="input100" type="password" asp-for="_pass">
                                <span class="label-input100">Пароль</span>
                            </div>
                            <div class="container-login100-form-btn">
                                <input type="submit" class="login100-form-btn" value="Sign in" hidden>
                                <button class="login100-form-btn" style="border-bottom-left-radius: 12px; border-bottom-right-radius: 12px">
                                    Войти
                                </button>
                            </div>
                        </div>
                    </figure>
                    <div class="text-center w-full p-t-23">
                        <a class="txt1" name="reg" asp-action="signup" asp-controller="Acc" style="color: black">
                            Регистрация
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <script src="~/vendor/jquery/jquery-3.2.1.min.js"></script>

    <script src="~/vendor/animsition/js/animsition.min.js"></script>

    <script src="~/vendor/bootstrap/js/popper.js"></script>
    <script src="~/vendor/bootstrap/js/bootstrap.min.js"></script>

    <script src="~/vendor/select2/select2.min.js"></script>

    <script src="~/vendor/daterangepicker/moment.min.js"></script>
    <script src="~/vendor/daterangepicker/daterangepicker.js"></script>

    <script src="~/vendor/countdowntime/countdowntime.js"></script>

    <script src="~/js/main.js"></script>

    <script async src="https://www.googletagmanager.com/gtag/js?id=UA-23581568-13"></script>
    <script>
        window.dataLayer = window.dataLayer || [];
        function gtag() { dataLayer.push(arguments); }
        gtag('js', new Date());

        gtag('config', 'UA-23581568-13');
    </script>
